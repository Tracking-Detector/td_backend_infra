package components


templ Heading(text string) {
    <h2 class="text-xl font-bold text-gray-600">{text}</h2>
}

templ SubHeading(text string) {
    <h3 class="text-lg font-bold text-gray-600">{text}</h3>
}

templ Caption(text string) {
    <p class="text-sm text-gray-500">{text}</p>
}

templ Label(text string) {
    <label class="text-sm text-gray-600">{text}</label>
}
